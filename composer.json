{
  "name": "gcworld/orm",
  "description": "GCWorld Industries ORM",
  "authors": [
    {
      "name": "GameCharmer",
      "email": "admin@gamecharmer.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-json": "*",
    "ext-pdo": "*",
    "gcworld/common":"^2.7.0",
    "gcworld/globals":">=4.0",
    "gcworld/interfaces": ">=4.1.5",
    "gcworld/database": ">=2.6.2",
    "composer/composer": ">=2.7",
    "composer/installers": ">=2.2",
    "symfony/yaml": "^6.0",
    "ramsey/uuid": ">=4.0",
    "monolog/monolog": ">=1.0",
    "nette/php-generator": "^4.1.5"
  },
  "require-dev": {
    "gcworld/code_sniffer_contrib": "^2.0.1",
    "phpstan/phpstan": "^1.9",
    "phpmd/phpmd": ">=2.6",
    "friendsofphp/php-cs-fixer": "^3.14",
    "phpunit/phpunit": "^11.0",
    "mikey179/vfsstream": "^1.6"
  },
  "autoload": {
    "psr-4": {"GCWorld\\ORM\\": "src/"}
  },
  "scripts": {
    "post-autoload-dump": [
      "bash contrib/setup.sh",
      "GCWorld\\ORM\\ComposerInstaller::setupConfig"
    ],
    "post-install-cmd": [
      "bash contrib/setup.sh"
    ]
  },
  "license":"MIT",
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
