{
  "name": "gcworld/orm",
  "description": "GCWorld Industries ORM",
  "authors": [
    {
      "name": "GameCharmer",
      "email": "admin@gamecharmer.com"
    }
  ],
  "require": {
    "php": ">=7.2.5",
    "ext-json": "*",
    "ext-pdo": "*",
    "gcworld/common":"^2.5",
    "gcworld/globals":"^2.0",
    "gcworld/interfaces": ">=3.1.1",
    "gcworld/database": "^2.3.4",
    "composer/composer": "^1.1",
    "composer/installers": "^1.0",
    "symfony/yaml": "^4.0",
    "ramsey/uuid": "^3.8",
    "monolog/monolog": "^1.1 || ^2.0",
    "nette/php-generator": "^3.3"
  },
  "require-dev": {
    "gcworld/code_sniffer_contrib": "^2.0.1",
    "phpstan/phpstan": "^0.12",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan-deprecation-rules": "^0.12",
    "friendsofphp/php-cs-fixer": "^2.15.1"
  },
  "autoload": {
    "psr-4": {"GCWorld\\ORM\\": "src/"}
  },
  "scripts": {
    "post-autoload-dump": [
      "bash contrib/setup.sh",
      "GCWorld\\ORM\\ComposerInstaller::setupConfig"
    ],
    "post-install-cmd": [
      "bash contrib/setup.sh"
    ]
  },
  "license":"GPL-3.0"
}
