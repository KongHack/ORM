{
  "name": "gcworld/orm",
  "description": "GCWorld Industries ORM",
  "authors": [
    {
      "name": "GameCharmer",
      "email": "admin@gamecharmer.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "gcworld/common":"^2.6.3",
    "gcworld/globals":"^3.1.0",
    "gcworld/interfaces": ">=3.1.1",
    "gcworld/database": ">=2.5.2",
    "composer/composer": ">=2.0",
    "composer/installers": "^1.10",
    "symfony/yaml": "^4.0",
    "ramsey/uuid": ">=4.0",
    "monolog/monolog": "^1.0|^2.3",
    "nette/php-generator": "^3.6"
  },
  "require-dev": {
    "gcworld/code_sniffer_contrib": "^2.0.1",
    "phpstan/phpstan": "^1.4",
    "phpmd/phpmd": ">=2.6",
    "friendsofphp/php-cs-fixer": ">=2.15.1"
  },
  "autoload": {
    "psr-4": {"GCWorld\\ORM\\": "src/"}
  },
  "scripts": {
    "post-autoload-dump": [
      "bash contrib/setup.sh",
      "GCWorld\\ORM\\ComposerInstaller::setupConfig"
    ],
    "post-install-cmd": [
      "bash contrib/setup.sh"
    ]
  },
  "license":"GPL-3.0",
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
